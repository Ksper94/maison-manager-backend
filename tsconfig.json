{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "types": [ // Ajout explicite des types utilis√©s
      "node",
      "express",
      "body-parser",
      "qs",
      "range-parser",
      "send",
      "serve-static"
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}